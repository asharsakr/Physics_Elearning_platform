@page
@model DBproject.Pages.RandomquizformModel
@{
    Layout = "_Layout4";
}
<div class="card mt-4">
    <div class="container" >
        <div class="text-right">
            <div class="quiz-form">
                <h2 class="text-right">مُنشئ الاختبارات</h2>
                <form method="post" asp-page-handler="GenerateQuiz">
                    <div class="form-group">
                        <label for="hardness" class="text-right">مستوى الصعوبة:</label>
                        <select class="form-control" asp-for="Hardness" name="Hardness" id="hardness">
                            <option value=1>سهل</option>
                            <option value=2>متوسط</option>
                            <option value=3>صعب</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="topic">الموضوع:</label>
                        <input type="text" asp-for="@Model.Topic" class="form-control" id="topic" name="Topic">
                    </div>
                    <div class="form-group">
                        <label for="study-level">مستوى الدراسة:</label>
                        <input type="number" asp-for="@Model.StudyLevel" class="form-control" id="study-level" name="StudyLevel" min="1" max="3">
                    </div>
                    <div class="form-group">
                        <label for="num-questions">عدد الأسئلة:</label>
                        <input type="number" asp-for="@Model.NumQuestions" class="form-control" id="num-questions" name="NumQuestions" min="1">
                    </div>
                    <button class="btn btn-success btn-block">إنشاء الاختبار</button><br />
                </form>
            </div>
        </div>
    </div>
</div>
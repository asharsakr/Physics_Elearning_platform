@page
@model DBproject.Pages.TeacherModel
@{
       ViewData["Title"] = "منصة الاستاذ زكريا مختار";
    Layout = "_Layout3";
}
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Page</title>
    <style>
        /* Custom CSS can be added here */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .mt-6 {
            margin-top: 60px;
        }
        .quiz-form {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .quiz-form h2 {
                text-align: center;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="number"],
        select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }

        .container {
            max-width: 800px;
            margin-top: 50px;
        }

        .confirmation-table {
            margin-top: 30px;
        }

        .multimedia-container {
            max-width: 500px;
            margin: 0 auto;
        }

            .multimedia-container h2 {
                margin-bottom: 20px;
            }

        .multimedia-form {
            margin-top: 20px;
        }

            .multimedia-form label {
                font-weight: bold;
            }

            .multimedia-form input[type="text"],
            .multimedia-form select {
                margin-top: 5px;
            }

        .upload-button {
            margin-top: 20px;
        }
    </style>
</head>
<body class="text-right">
    <div class="contanir mt-180">
        <div class="container mt-5">
            <!-- Add Question Form -->
            <div class="card mt-4">
                <div class="card-header">اضف السؤال الي بنك الاسئله</div>
                <div class="card-body">
                    <div class="container">
                        <form method="post">
                            <button class="btn btn-lg btn-block" asp-page-handler="AddQuestion">اضافه سؤال</button>
                        </form>
                    </div>
                </div>
            </div>


            <!-- Quiz Form -->
            <div class="card mt-4">
                <div class="card-body">
                    <div class="container">مُنشئ الاختبارات</div>
                    <div class="card-body">
                        <div class="container">
                            <form method="post" asp-page-handler="GenerateQuiz">
                                <button class="btn btn-secondary btn-lg btn-block" type="submit">إنشاء اختبار</button>
                            </form>
                        </div>
                    </div>




                </div>


        <!-- Link to Videos Page -->
        <div class="card mt-4">
            <div class="card-header">محاضرات</div>
            <div class="card-body">
                <div class="container">
                    <form method="get" action="/video">
                        <button class="btn btn-lg btn-block btn-primary">اضافة فيديو</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Link to PDF Page -->
        <div class="card mt-4">
            <div class="card-header">PDFs</div>
            <div class="card-body">
                <div class="container">
                    <form method="get" action="/PDF">
                        <button class="btn btn-lg btn-block btn-primary">اضافه PDF</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Link to TA Page -->
        <div class="card mt-4">
            <div class="card-header">المساعدين</div>
            <div class="card-body">
                <div class="container">
                    <form method="get" action="/TA">
                        <button class="btn btn-lg btn-block btn-primary">عرض المساعدين</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Link to Students Page -->
        <div class="card mt-4">
            <div class="card-header">الطلاب</div>
            <div class="card-body">
                <div class="container">
                    <form method="get" action="/Students">
                        <button class="btn btn-lg btn-block btn-primary">عرض الطلاب</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>
